html {
  overflow-x: hidden;
}
body,
li,
h1,
h2,
h3,
h4,
h5,
ul,
p {
  padding: 0;
  margin: 0;
}
a {
  text-decoration: none;
}
a:active {
  text-decoration: none;
}
img {
  display: block;
}
i {
  font-style: normal;
}
li {
  list-style: none;
}
body {
  background: #000000;
  font-family: Tahoma, Arial, Roboto, "Droid Sans", "Helvetica Neue", "Droid Sans Fallback", "Heiti SC", sans-self;
}
header {
  height: 1.5rem;
  text-align: center;
  line-height: 1.5rem;
  font-size: 0.375rem;
  color: #999999;
  background: #262626;
  position: relative;
  overflow: hidden;
}
header span {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 2px;
  width: 33.33%;
  background: #e04a32;
  transition: 0.5s;
}
.topBox {
  width: 100%;
  overflow: hidden;
  top: 1.5rem;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  padding-top: 0.4rem;
}
.mui-scroll {
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  width: 92%;
  left: 4%;
}
.topList {
  height: 1.8rem;
  background: #262626;
  line-height: 1.8rem;
  text-align: center;
  font-size: 0.375rem;
  color: #999999;
  margin-bottom: 0.1rem;
  border-radius: 20px;
}
.topList .userImg {
  width: 1rem;
  height: 1rem;
  border-radius: 0.5rem;
  display: inline-block;
}
.topList .order {
  text-align: left;
}
.topList .order img {
  display: inline-block;
  width: 0.5rem;
  margin: 0 3px;
}
.topList .userName,
.topList .nuserM {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
}
.topList .nuserM {
  color: #e04a32;
}
.line {
  width: 20%;
  height: 4px;
  margin: 10px auto;
  background: #999999;
}
