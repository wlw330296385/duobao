*{	
	font-family: "微软雅黑" !important;
	font-size: 1em !important;
	padding: 0 !important;
}
.row{
	position: relative;
	margin:0 5% 0 5%;
	border-bottom: solid #E3E3E3 1px;
}
.row span{
	display: inline-block;
}

input{
	height: 20px;
	position: absolute;
	right: 0;
	bottom: 30%;
	width: 7%;
}

p{
	font-size: 0.5em !important;
}

